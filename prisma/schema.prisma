generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int     @id @unique
  email      String  @unique
  password   String
  profileURL String?
  role       Role?

  @@map("users")
}

model Service {
  id                 Int      @id @unique
  name               String
  description        String
  price              Float
  duration           String
  availabilityStatus String
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  @@map("services")
}

model Car {
  id          Int       @id @unique
  name        String
  description String
  price       Float
  rating      Float
  image       String
  status      CarStatus
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("cars")
}

model Booking {
  id          Int      @id @unique
  name        String
  bookingDate String
  bookingTime String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("bookings")
}

model Mechanic {
  id                 Int                @id @unique
  name               String
  experience         Int
  price              Float
  availabilityStatus AvailabilityStatus
  image              String?
  createdAt          DateTime           @default(now())
  updatedAt          DateTime           @updatedAt

  @@map("mechanices")
}

enum Role {
  admin
  super_admin
}

enum CarStatus {
  inStock
  outOfStock
}

enum AvailabilityStatus {
  free
  busy
}
